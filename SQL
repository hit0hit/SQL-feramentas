ORDER BY column1, column2, ... ASC|DESC;
WHERE NOT ID = 2 OU ID != 2/ MOSTRARÁ TODOS QUE NÃO TENHA O ID DE 2
ORDER BY NOME DESC LIMIT 4 / ISSO IRÁ LIMITAR AS LINHAS PARA 4
FETCH FIRST 4 ROWS ONLY; / ISSO IRÁ LIMITAR AS LINHAS PARA 4
RIGHT (CPF,1) = IN (0,1,2) / ISSO IRÁ TRAZER TODOS OS CPF QUE TERMINA COM 0,1,2 USANDO O IN
ID NOT IN (1,2) / IRÁ RETORNAR TODOS MENOS OS 1,2 
WHERE EXISTS(SELECT * FROM VENDA WHERE ID = 1) / ISSO IRÁ TRAZER SÓ OS AS VENDA E EXISTE COM UMA OUTRA TABELA

where total between 100 and 1000 / para filtrar os valor entre 100 e 1000
where total not between 100 and 1000 / para filtrar os valor que não esteja entre 100 e 1000
where Data between '1/1/2022' and '5/1/2022' / para filtrar as datas que esteja entre '1/1/2022' e '5/1/2022'
WHERE (MONTH(DATA)>= 4 OR MONTH(DATA) <= 9) / para filtrar as datas que esteja entre 4 E 9

VALOR IN (2,3) / RETORNA SÓ O VALOR 2 E 3
VALOR NOT IN (2,3) / RETORNARÁ SÓ O VALOR QUE NÃO SEJA 2 E 3
VALOR IN (SELECT VALOR FROM TABELA)

WHERE NOME LIKE 'HENR%' / FILTRA OS NOME QUE COMEÇAM COM HENR
WHERE NOME LIKE '%QUE' / FILTRA OS NOME QUE TERMINA COM QUE
WHERE NOME LIKE '%NRI%' / FILTRA OS NOME QUE ESTEJA NO MEIO COM NRI

SUM(VALOR) AS TOTAL / SOMA TOTAL A COLUNA DANDO UM TOTAL
SQRT(VALOR) ÀS RAIZ / TIRA A RAIZ 
MIN(VALOR) ÀS MENOR VALOR / TRATAR SÓ O MENOR VALOR DA TABELA
MAX(VALOR) AS MAIOR_VALOR
AVG(VALOR) AS MEDIA

HAVING SERVE PARA FILTRAR UM VALOR QUE TA SENDO AGRUPADO COM 'GROUP BY'
GROUP BY VALOR
HAVING COUNT(VALOR) > 100 / ISSO VAI FILTRAR OS VALOR ACIMA DE 100
HAVING SUM(VALOR) BERWEEN 100 AND 1000
RIGHT (CPF,1) = 1 / IRÁ TRAZER OS CPF QUE TERMINA COM 1


TIMESTAMPDIFF(YEAR,DATA_NACIMENTO,NOW()) AS IDADE
DATEPART(MONTH, DATA) AS MES /RETORNA UMA PARTE DE UMA DATA OU HORAS / https://learn.microsoft.com/pt-br/sql/t-sql/functions/datepart-transact-sql?view=sql-server-ver16
SELECT COUNT(PESSOA), DATEPART(MONTH, DATA) AS MES FROM CADASTRO
GROUP BY DATEPART(MONTH, ORDERDATE) / ISSO VAI FILTRAR TODAS AS PESSOAS POR MÊS
DAY | MONTH | YEAR

SELECT NOME
FROM TABELA T
WHERE ID.NOME IN( SELECT ID_NOME FROM PESSOA WHERE NOME = 'H')
OU
INNER JOIN PESSOA P ON P.ID_NOME = T.ID_NOME_FK AND T.NOME = 'H')

CONCAT(NOME,' ', ID) OU NOME||' '||ID
UPPER(NOME) / ISSO DEIXARÁ OS NOME MAIÚSCULO
LOWER(NOME) / ISSO DEIXARÁ OS NOME MINÚSCULO
LEN(NOME) / ISSO VAI CONTAR QUANTOS LETRAS TEM O NOME
SUBSTRING(NOME,1,4) / ISSO VAI PEGAR AS 4 PRIMEIRA LETRAS DO NOME
REPLACE(CPF,'.','-') / ISSO IRÁ SUBSTITUIR OS . POR -
ROUND(VALOR,2) / ISSO IRÁ FAZER A PRECISÃO DE 2 CASA DECIMAL 2.22

DATE DD/MM/YYYY OU DATETIME DD/MM/YYYY:HH:MM:SS TIME 

TRUNCATE TABLE VENDAS / ISSO IRÁ APAGAR OS DADOS DA TABELA

IFNULL(NOME, 'SEM NOME') / SE NOME FOR NULL IRÁ APARECER SEM NOME

SEPARATOR', ' / ISSO IRÁ SEPARAR QUANDO TIVER ,

IF(
VALOR > 100,
VALOR * 0,5,
VALOR * 0,1
) / SE O VALOR FOR MAIOR QUE 100 RETORNA * 0,5 SE NÃO FOR MAIOR RETORNA * 0,1

CASE
	WHEN NOME IS NULL THEN NOW()
	WHEN NOME < NOW THEN NOW()
	ELSE NOME
END 'NOME';
CASE
	WHEN (DATEDIFF(NOW(),DATA_NACIMENTO)/365) THEN 'MAIR'
	ELSE 'MENOR'
END 'SINTUAÇÃO'

